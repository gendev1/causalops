{
    "compilerOptions": {
        "strict": true,
        "useUnknownInCatchVariables": true,
        "allowJs": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "newLine": "lf",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "target": "ES2022",
        "lib": ["ES2022"],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "incremental": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true
    }
}